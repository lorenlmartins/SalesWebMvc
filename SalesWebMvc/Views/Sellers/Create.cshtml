@model SalesWebMvc.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Seller</h4>
        <hr />
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label">Name</label>
                <input asp-for="Seller.Name" class="form-control" required />
                <div class="invalid-feedback">
                    <span asp-validation-for="Seller.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label">Email</label>
                <input asp-for="Seller.Email" class="form-control" required />
                <div class="invalid-feedback">
                    <span asp-validation-for="Seller.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Seller.BirthDate" class="control-label">Birth Date</label>
                <input asp-for="Seller.BirthDate" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="control-label">Base Salary</label>
                <input asp-for="Seller.BaseSalary" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label">Department</label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
