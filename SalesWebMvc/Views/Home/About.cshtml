@{
    ViewData["Title"] = "About";
}

<div class="container mt-5">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p class="lead text-muted">SalesWebMvc</p>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-primary">Project Overview</h5>
            <p class="card-text">
                SalesWebMvc is a web application designed for efficient sales management. It offers tools to streamline business operations, organize sales records, manage sellers, and categorize departments seamlessly.
            </p>
            <a href="https://github.com/lorenlmartins/sales-web-mvc.git" class="btn btn-primary" target="_blank">
                <i class="bi bi-github"></i> GitHub Repository
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
